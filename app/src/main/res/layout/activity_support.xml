<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EBE4D1"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_weight="0.0"
            android:src="@drawable/baseline_arrow_back_24" />


        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_weight="0.5"
            android:text="support"
            android:textColor="#E55604"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="ObsoleteLayoutParam" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="17dp"
        android:text="General"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-14dp"
        tools:layout_editor_absoluteY="121dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:text="What is Rider xpress"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/img" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/txt4"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="In which cities Rider xpress is currently running"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/img"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="payments"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt6"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:text="What is the payment structure? How will I get paid"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/img"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt7"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="How will passenger pay for the ride"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/img"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt8"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="safety"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        android:textStyle="bold"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:text="call"
        android:textColor="@color/black"
        android:backgroundTint="#FFCC70"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt8"
        android:textAlignment="center"
        android:layout_marginTop="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>